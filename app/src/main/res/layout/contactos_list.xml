<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/textViewIdTlftextViewIdTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewIdTlf"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/textViewTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewTlf"
        android:layout_weight="2"
        />

    <ImageView
        android:id="@+id/imageViewTlf"
        android:contentDescription="@string/imageViewTlf"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        android:layout_weight="0.5"/>


</LinearLayout>